<body class="index_check" background="" style="display: none;">
  <div class="container" >
    <div class="col-md-12">
      <div class=" col-md-offset-8 col-lg-offset-8 col-lg-4 col-md-4">
        <div class="div_height">
          <center>
            <form id="login-form" class="form-horizontal m-t-20" action="#" autocomplete="off" style="background-color: white;padding-bottom:11px;">
              <img src="assest/images/Ziba.png" class="img">
              <div class="form-group">
                <div style="padding-bottom: 15px;">
                  <input placeholder="Email ID" type="email" name="username" autocomplete="off" name="uname" required style="word-spacing: 5px;font-size: 13px;">
                </div>
                <div style="padding-bottom: 15px;">

                  <input placeholder="Password" type="password" name="password" id="myInput" required style="font-size: 13px;">
                </div>
              </div>
              <div class="form-group">
                <button type="submit" class="btnn" id="login" style="padding-right: 107px;padding-left: 107px;">Log In</button>
                <br>
                  <!-- <span data-toggle="modal" data-target="#forget_password"  style="cursor: pointer;color: black;text-decoration: none;opacity: 0.5">Forgot Password?</span> -->
              </div>
            </form>
          </center>
          </div>

        </div>
      </div>
    </div>

     <div class="modal fade" id="forget_password" role="dialog" style="opacity: 1;">
            <!-- Modal -->
            <div class="modal-dialog" style="width: 486px;">

                <!-- Modal content-->
                <div class="" style="background-color: white;border-radius: 4px;">
                    <div class="modal-header" style="padding: 10px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <p class="modal-title" style="padding-left: 6px;font-weight: 700">
                            <b id="count_follow">Forgot Password</b>
                        </p>

                    </div>
                    <div class="modal-body " style="background-color: white;padding: 0;bottom: 13px;">
                      <div style="padding: 15px">
                        <p style="padding-top: 11px;padding-bottom: 13px;">Please enter your email address to search for your account.</p>
                         <input placeholder="Email ID" id="forgot_email" type="email" autocomplete="off" name="uname" required style="word-spacing: 5px;font-size: 13px;padding: 7px;border: 1px solid #9db0c7;background-image: unset;">
                         <p id="registered" style="padding-top: 20px;margin-bottom: 0;display: none;">Hey! We've sent you an email to reset password, please do check and log in after.</p>
                         <div id="not_registered" style="padding: 0;display: none;">
                          <p  style="padding-top: 20px;margin-bottom: 18px;">You are not registered so please signup and login.</p>
                          <a href="sign_up">Sign Up</a>
                         </div>
                      </div>
                         <hr style="margin-left: unset;margin-right: unset;">
                         <div style="text-align: right;margin-right: 12px;">
                          <span  class="" data-dismiss="modal" style="cursor: pointer;">Cancel</span>
                          <button type="button" class="save_button" id="conform_mail" style="padding-left: 10px;padding-right: 14px;padding-top: 3px;padding-bottom: 5px;">Confirm</button>
                         </div>
                    </div>
            </div>
        </div>
