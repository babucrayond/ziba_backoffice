<script type="text/javascript">

  $(document).ready(function ($) {
    
      $(".index_check").show();
      $(".index_check").addClass("bg")
      var window_length = $(window).height();
      var div_length = $(".div_height").height();
      var balance = window_length - div_length;
      var set_height = balance / 2;
      $(".div_height").css('padding-top', set_height + "px");
    // }
    var form_data, username, password;
    $("#conform_mail").click(function(){
      var forgot_mail_id = $("#forgot_email").val();
      if (forgot_mail_id.trim()) {
        App.forgot_password(forgot_mail_id)
      }else{
        App.error_alert("Please enter email address")
      }
    });
    $('#forget_password').on('hidden.bs.modal', function () {
      $("#registered").hide();
      $("#not_registered").hide();
    });
    $('#login-form').validate({
      rules: {
        username: "required",
        password: "required"
      },
      invalidHandler: function () {
      },
      highlight: function (element, errorClass) {
        // $(element).animateCss('shake');
      },
      submitHandler: function (form) {
        $('#login').attr('disabled', true);
        $('#login').text('Logging in...');
        $("#login").css('padding-left', '85px');
        $("#login").css('padding-right', '85px');
        form_data = $("form").serializeArray();

        // console.log(form_data);
        $.each(form_data, function (index, value) {
          // console.log(index);
          switch (value.name) {
            case "username":
              username = value.value;
              break;

            case "password":
              password = value.value;
              break;
          }
          // console.log(value.name)
        });

        localStorage.setItem('user_name', username);

        App.login(username, password);

      }
    });
  });
</script>

